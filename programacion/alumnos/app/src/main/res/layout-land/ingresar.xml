</androidx.constraintlayout.widget.ConstraintLayout>
    ?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">


<View
    android:id="@+id/fondo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondoo" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondoo"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/Derecha"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="¡QUÉ BUENO VERTE!"
            android:textAlignment="center"
            android:textColor="#323232"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/iconomain"
            android:layout_width="105dp"
            android:layout_height="97dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/iconoparacande" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textomain2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Sugerencia"
                    android:textAlignment="viewStart"
                    android:textColor="#9C27B0"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:text="      Pedí ayuda a tus papás      si no sabés cómo ingresar." />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/preocupadoan" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Izquierda"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutemailmain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/botonredondeado"
            android:backgroundTint="#FFFFFF"
            android:orientation="horizontal">

            <View
                android:id="@+id/view3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/en"
                android:backgroundTint="#3B070707" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#C5C3C3"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColor="#2B2B2B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutcontramain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/botonredondeado"
            android:backgroundTint="#FFFFFF"
            android:orientation="horizontal">

            <View
                android:id="@+id/view4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|start|left"
                android:layout_marginStart="10dp"
                android:background="@drawable/bloquear"
                android:backgroundTint="#3B070707" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#C5C3C3"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#2B2B2B" />
        </LinearLayout>

        <Button
            android:id="@+id/botoniniciar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/botonredondeado"
            android:backgroundTint="#E91E63"
            android:text="INICIAR"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonregistrar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/botonredondeado"
            android:backgroundTint="#00BCD4"
            android:text="REGISTRAR"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>